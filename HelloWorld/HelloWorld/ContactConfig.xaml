<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.ContactConfig">
    <StackLayout>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Name">
                    <EntryCell Label="First Name" x:Name="fName"/>
                    <EntryCell Label="Last Name" x:Name="lName"></EntryCell>/>
                </TableSection>
                <TableSection Title="Contact">
                    <EntryCell Label="Phone" />
                    <EntryCell Label="Email" />
                </TableSection>
                <TableSection Title="Other">
                    <SwitchCell Text="Blocked"/>
                </TableSection>
                <TableSection>
                    <ViewCell>
                        <Button HorizontalOptions="Center" Text="Save" Clicked="Button_Clicked" />
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </StackLayout>
</ContentPage>